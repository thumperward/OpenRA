{
	"name": "C# (.NET)",
	"image": "mcr.microsoft.com/devcontainers/dotnet:0-6.0",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csharp",
				"openra.oraide-vscode",
				"openra.vscode-openra-lua",
				"EditorConfig.EditorConfig",
				"macabeus.vscode-fluent",
				"ms-vscode.makefile-tools",
				"ms-dotnettools.csdevkit",
				"ms-vscode.powershell"
			]
		}
	},
	"features": {},
	"containerEnv": {
		"PATH": "PATH=/usr/lib/wine:$PATH"
	},
	"postStartCommand": {
		"safe-dir": "git config --global --add safe.directory ${containerWorkspaceFolder}",
		"dependencies": "sudo apt-get update && sudo apt-get install -y --no-install-recommends nsis wine64 imagemagick"
	}
}
